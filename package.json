{
  "name": "learning-markdown",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "marked": "^0.7.0",
    "tailwindcss": "^0.7.4",
    "vue": "^2.6.11",
    "vue-resource": "^1.5.1",
    "vue-router": "^3.1.5"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "@vue/cli-plugin-babel": "^3.12.1",
    "@vue/cli-plugin-eslint": "^3.12.1",
    "@vue/cli-service": "^4.1.2",
    "@vue/eslint-config-standard": "^4.0.0",
    "babel-eslint": "^10.0.3",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.2.3",
    "node-sass": "^7.0.0",
    "postcss-purgecss": "^1.0.0",
    "purgecss": "^1.4.2",
    "sass-loader": "^7.3.1",
    "vue-template-compiler": "^2.6.11"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/standard"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "tailwindcss": "./tailwind.js",
      "autoprefixer": {},
      "postcss-purgecss": {
        "content": [
          "./public/**/*.html",
          "./src/**/*.html",
          "./src/**/*.vue",
          "./src/**/*.scss"
        ],
        "whitelist": [
          "sm:w-1/2",
          "lg:w-1/4",
          "hover:bg-primary-hover",
          "overflow-hidden",
          "sm:flex",
          "sm:justify-between",
          "sm:items-center",
          "sm:text-3xl",
          "sm:mt-0"
        ]
      }
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
